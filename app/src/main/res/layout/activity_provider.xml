<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_provider_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provider插入数据"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_provider_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Provider删除数据"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_provider_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Provider修改数据"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_provider_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Provider查询数据"
        android:textSize="16sp" />
</LinearLayout>